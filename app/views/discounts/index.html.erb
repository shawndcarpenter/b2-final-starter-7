<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>
      <% @discounts.each do |d| %>
        <section id="discount-<%= d.id %>">
      <p><%= link_to "Discount ##{d.id}", merchant_discount_path(@merchant, d) %></p>
      <p><%= d.percentage %> Percent Off when you buy <%= d.threshold %> items</p>
      <p><%= button_to "Delete", merchant_discount_path(@merchant, d), method: :delete %></p>
  <% end %>

  <p><%= link_to "Create a New Discount", new_merchant_discount_path(@merchant) %></p>
</body>