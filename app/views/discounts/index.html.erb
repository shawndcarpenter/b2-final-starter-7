<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <p><%= link_to "Create a New Discount", new_merchant_discount_path(@merchant) %></p>

  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <p><%= link_to "Discount ##{discount.id}", merchant_discount_path(@merchant, discount) %></p>
      <p><%= discount.percentage %> Percent Off when you buy <%= discount.threshold %> items</p>
      <p><%= button_to "Delete", merchant_discount_path(@merchant, discount), method: :delete %></p>
    </section>
  <% end %>

  <div class="row">
    <p class='col-12'>Next Three Holidays</p>
  </div>

  <% @holidays.each do |holiday| %>
    <section class="holiday-<%= holiday.name %>">
      <p><%= holiday.name %></p>
        <%= holiday.date %>
        <p><%= button_to "Create Discount", "/merchants/#{@merchant.id}/discounts", method: :post %></p>
    </section>
  <% end %>
</body>